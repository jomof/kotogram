{
  "name": "kotogram",
  "version": "0.0.7",
  "description": "A dual Python/TypeScript library for Japanese text parsing and encoding using kotogram format",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "node --test",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "japanese",
    "nlp",
    "mecab",
    "parser",
    "tokenizer",
    "kotogram",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jomof/kotogram.git"
  },
  "bugs": {
    "url": "https://github.com/jomof/kotogram/issues"
  },
  "homepage": "https://github.com/jomof/kotogram#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  }
}
